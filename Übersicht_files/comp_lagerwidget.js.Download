(function( comp_lagerwidget, $ ) {
    
    function init() {
        // Click header
        $('div#lagerwidget > .header').on('click', function() {
            location.href='/bestand/index';
        });
                
        $('.sortenbestandinfo span').on('click', function() {
            const id = $(this).attr('data-id');
            const aid = $(this).attr('data-aid');
            location.href='/bestand/update?id='+id+'&Artikel_id='+aid+'&kategorie=1';
        });
        
        
       $('.lagerinfo span.tosorte').on('click', function() {
           const sorte = $(this).attr('data-id');
           let $sortenContainer = $('div.sorteninfocontaoner[data-id="'+sorte+'"]');
           let $caret = $('span.tosortecaret[data-id="'+sorte+'"]');
           if ($sortenContainer.css('display') === 'block') {
               $sortenContainer.css('display','');
                $caret.html('<i class=\"fa fa-caret-right\"></i>');
            } else {
               $sortenContainer.css('display','block');
               $caret.html('<i class=\"fa fa-caret-down\"></i>');
            }            
        }); 
        
    }
    
    init();
    
}( window.comp_lagerwidget = window.comp_lagerwidget || {}, jQuery ));