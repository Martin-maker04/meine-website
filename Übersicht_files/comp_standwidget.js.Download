(function( comp_standwidget, $ ) {
    
    function init() {
        // Click header
        $("div#standwidget > .header").on("click", function() {
            location.href="/stand/index";
        });
        
        // Click stock
        $(".standinfo span.tostand").on("click", function() {
            const dataid = $(this).attr("data-id");
            location.href="/stand/index?id="+dataid;
        });
        
        $(".stockinfo span").on("click", function() {
            const url = $(this).attr("data-id");
            location.href=url;
        });
        
        
        $(".standinfo span.tostock").on("click", function() {
            const dataid = $(this).attr("data-id");
            if ($("div.stockinfocontainer[data-id='"+dataid+"']").css("display") == "block") {
                $("div.stockinfocontainer[data-id='"+dataid+"']").css("display","");
                $("span.tostockcaret[data-id='"+dataid+"']").html("<i class=\"fa fa-caret-right\"></i>");
            } else {
                $("div.stockinfocontainer[data-id='"+dataid+"']").css("display","block");
                $("span.tostockcaret[data-id='"+dataid+"']").html("<i class=\"fa fa-caret-down\"></i>");
            }
            
        });
        
    }
    
    init();
    
}( window.comp_standwidget = window.comp_standwidget || {}, jQuery ));